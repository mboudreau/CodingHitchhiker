<main class="content" role="main">

<article class="{{post_class}}">

<div class="inner">

	{{! Everything inside the #post tags pulls data from the post }}
	{{#post}}

	{{! Everything below outputs content of the the post which has been published }}

		<span class="post-meta"><strong class="post-meta-date">{{date format="DD MMM YYYY"}}</strong> {{#if tags}}
			on {{tags}}{{/if}}</span>

		<h1 class="post-title">{{{title}}}</h1>

		<section class="post-content">
			{{content}}
		</section>

		<footer class="post-footer">

			<section class="share">
				<h4>Share this post -</h4>
				<a class="twitter-share-link" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
				   onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">Twitter</a>
				<a class="facebook-share-link"
				   href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
				   onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">Facebook</a>
				<a class="google-plus-share-link" href="https://plus.google.com/share?url={{url absolute="true"}}"
				   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">Google
					Plus</a>
			</section>

		</footer>

		<section class="disqus-comments">
			<h4>Leave a comment -</h4>

			<div id="disqus_thread"></div>
		</section>

	</div>

	</article>

	<div class="animate-post animationBegin">

		{{#if author}}
			<div class="author-bio" {{#if @author.cover}}style="background-image: url({{@author.cover}})"{{/if}}>
				<section class="author inner" itemscope itemtype="http://data-vocabulary.org/Person">
					{{#if author.image}}
						<img src="{{author.image}}" width="150px" height="150px" alt="Profile Image"/>
					{{/if}}
					<h4 itemprop="name">{{author.name}}</h4>

					<p>{{author.bio}}</p>
				</section>
			</div>
		{{/if}}

	</div>

	{{/post}}

</main>

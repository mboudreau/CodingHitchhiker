{{! The main content area on the homepage }}
<main class="content" role="main">

    {{! Each post will be output using this markup }}
    {{#foreach posts}}
    
    <div class="animate-post animationBegin">

	    <article class="{{post_class}}">
	    
	    	<div class="inner">
	    	
		    	<header class="post-header">
		        	<span class="post-meta"><strong class="post-meta-date">{{date format="DD MMM YYYY"}}</strong> {{#if tags}}on {{tags}}{{/if}}</span>
		            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
		        </header>
		        
		        <section class="post-excerpt">
		            <p>{{excerpt}}&hellip;</p>
		        </section>
		        
		        <a class="read-more-button" href="{{url}}">Read full post <i class="fa fa-angle-double-right"></i></a>
	        
	        </div>
	    
	    </article>
    
    </div>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}

</main>